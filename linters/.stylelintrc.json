{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-blacklist": [],
    "at-rule-no-vendor-prefix": true,
    "color-hex-length": "long",
    "color-named": false,
    "comment-word-blacklist": [ "XXX", "TODO" ],
    "declaration-no-important": true,
    "declaration-property-value-blacklist": { "": [] },
    "declaration-property-value-whitelist": { "font-family": [ "IBMPlexSans", "FontAwesome" ] },
    "font-family-name-quotes": "always-where-recommended",
    "font-family-no-missing-generic-family-keyword": false,
    "font-weight-notation": "numeric",
    "function-blacklist": [ "hsl" ],
    "function-url-quotes": "never",
    "length-zero-no-unit": false,
    "max-line-length": 120,
    "max-nesting-depth": [ 2, { "ignoreAtRules": [] } ],
    "media-feature-name-no-vendor-prefix": true,
    "number-leading-zero": "always",
    "order/properties-alphabetical-order": true,
    "plugin/no-browser-hacks": [ true, { "browsers": [ "last 2 Chrome versions" ] } ],
    "plugin/no-low-performance-animation-properties": true,
    "plugin/no-unsupported-browser-features": [ true, { "browsers": [ "last 2 Chrome versions" ] } ],
    "plugin/stylelint-no-indistinguishable-colors": [ true, { "threshold": 3 } ],
    "plugin/z-index-value-constraint": { "min": 1, "max": 10 },
    "property-no-vendor-prefix": [ true, { "ignoreProperties": [ ] } ],
    "scale-unlimited/declaration-strict-value": [ [ "font-size", "font-weight" ], { "ignoreKeywords": [ "inherit" ] } ],
    "selector-attribute-quotes": "never",
    "selector-class-pattern": [ "^[a-z0-9\\- :%();@~']*$", { "resolveNestedSelectors": true } ],
    "selector-max-attribute": 2,
    "selector-max-combinators": 2,
    "selector-max-compound-selectors": 4,
    "selector-max-pseudo-class": 1,
    "selector-max-specificity": ["0,4,2", { "ignoreSelectors": [] } ],
    "selector-max-universal": 1,
    "selector-no-qualifying-type": [ true, { "ignore": [ "attribute" ] } ],
    "selector-no-vendor-prefix": [ true, { "ignoreSelectors": [] } ],
    "selector-pseudo-class-no-unknown": false,
    "selector-type-no-unknown": false,
    "string-quotes": [ "single", { "avoidEscape" : false } ],
    "unit-whitelist": ["px", "ms", "s", "deg", "%"],
    "value-no-vendor-prefix": [ true, { "ignoreValues": [] } ]
  },
  "plugins": [
    "stylelint-declaration-strict-value",
    "stylelint-high-performance-animation",
    "stylelint-no-browser-hacks/lib",
    "stylelint-no-indistinguishable-colors",
    "stylelint-no-unsupported-browser-features",
    "stylelint-order",
    "stylelint-z-index-value-constraint"
  ]
}
