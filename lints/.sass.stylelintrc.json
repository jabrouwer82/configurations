{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "max-line-length": 120,
    "selector-no-qualifying-type": "off",
    "max-nesting-depth": [
      1,
      {
        "ignoreAtRules": [
          "each",
          "media",
          "supports",
          "include",
          "keyframes"
        ]
      }
    ]
  }
}
