syntax on
set hlsearch  " Highlight all when searching
set tabstop=2 " Tabs are two spaces
set autoindent " auto indent
set smartindent " smart indentations
set shiftwidth=2 
set vb t_vb=
set ruler
set incsearch
set backspace=indent,eol,start
set expandtab
set selectmode=mouse
set ignorecase
set statusline=[%02n]\ %f\ %(\[%M%R%H]%)%=\ %4l,%02c%2V\ %P%*
set laststatus=2
set showmatch
